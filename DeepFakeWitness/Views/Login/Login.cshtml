@{
    Layout = "authLayout";
}
<div class="container-fluid  bg-dark text-white " data-bs-theme="dark">
    <div class="row h-100">
        <div class="col-md-6  d-none d-md-flex align-items-center">
            <div class="p-5">
                <div class="pb-5 logoarea">
                    <h1>
                        <i class="logoshield fa-solid fa-shield-halved "></i>
                        <span class="logotext">TrustLens</span>
                    </h1>
                </div>

                <div class="d-flex gap-3 mb-4">
                    <i class="fs-1 fa-solid fa-shield-halved "></i>
                    <div>
                        <h3 class="fw-bold">Deepfake Detection</h3>
                        <p class="text-muted">
                            Analyze images instantly to detect manipulations or deep faked content
                        </p>
                    </div>
                </div>

                <div class="d-flex gap-3 mb-4">
                    <i class="fa-regular fa-id-badge fs-1"></i>
                    <div>
                        <h3 class="fw-bold">Secure & Confidential</h3>
                        <p class="text-muted">
                            Your uploads are private, encrypted, and never stored without
                            permission.

                        </p>
                    </div>
                </div>

                <div class="d-flex gap-3">
                    <i class="fs-1 fa-solid fa-clipboard"></i>
                    <div>
                        <h3 class="fw-bold">Generate Verifiable Reports</h3>
                        <p class="text-muted">Export secure proof reports for legal or academic use.</p>
                    </div>
                </div>

                <div class="mt-5 pt-4">
                    <div class="d-flex align-items-center gap-1 mb-2">
                        <i class="bi bi-star-fill text-warning"></i>
                        <i class="bi bi-star-fill text-warning"></i>
                        <i class="bi bi-star-fill text-warning"></i>
                        <i class="bi bi-star-fill text-warning"></i>
                        <i class="bi bi-star-half text-warning"></i>
                        <span class="ms-2 text-muted">4.8/5 (1.2M reviews)</span>
                    </div>
                    <p class="h5 text-muted">Trusted by 5M+ customers worldwide</p>
                </div>
            </div>
        </div>

        <div class="col-md-6 d-flex align-items-center justify-content-center p-5">
            <div class="w-100" style="max-width: 500px">
                <h2 class="mb-4 fw-bold">Sign into Account</h2>

                <form>
                    <div class="row g-3">


                        <div class="col-12">
                            <label class="form-label">Email</label>
                            <input type="email" id="email" class="form-control" required>
                        </div>

                        <div class="col-12">
                            <label class="form-label">Password</label>
                            <input type="password" id="password" class="form-control" required>
                            <div class="form-text">Minimum 8 characters with 1 number</div>
                        </div>





                        <div class="col-12">
                            <button class="btn btn-primary w-100 py-2" onclick="LoginUser()">Sign in</button>
                        </div>
                    </div>
                </form>

                <div class="text-center mt-4">
                 <p class="text-muted">Already have an account? <a asp-controller="Register" asp-action="Register"
                            class="text-decoration-none">Sign
                            In</a></p> 
                   @*  <p class="text-muted">
                        Already have an account? <a href="signup.html"
                                                    class="text-decoration-none">
                            Sign
                            up
                        </a>
                    </p> *@

                    <div class="d-flex align-items-center my-4">
                        <hr class="flex-grow-1">
                        <span class="px-3 text-muted">or continue with</span>
                        <hr class="flex-grow-1">
                    </div>

                    <div class="d-flex gap-3 justify-content-center">
                        <button class="btn btn-outline-light btn-lg rounded-circle">
                            <i class="fa-brands fa-google"></i>
                        </button>
                        <button class="btn btn-outline-light btn-lg rounded-circle">
                            <i class="fa-brands fa-facebook"></i>
                        </button>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function LoginUser() {
        debugger;
        event.preventDefault();
        var email = $("#email").val();
        var password = $("#password").val();
        const passwordRegex = /^(?=.*[0-9]).{8,}$/;

        if (!passwordRegex.test(password)) {
            showToastifyMessage("Password must be at least 8 characters and contain at least one number.", "error");
            return;
        }
        if (email == null || email == '') {
            showToastifyMessage("Please Enter Email", "error");
        } else if (password == null || password == '') {
            showToastifyMessage("Please Enter Password", "error");
        } else {
            var loginData = {
                Email: $("#email").val(),
                UserPassword: $("#password").val()
            };
            $.ajax({
                type: "POST",
                url: "/Login/LoginUser",
                contentType: "application/json",
                data: JSON.stringify(loginData),
                success: function (response) {
                    if (response.status === "success") {
                        showToastifyMessage(response.message, "success");
                        setTimeout(() => {
                            if (response.role === "User") {
                                window.location.href = "/Home/Index";
                            } else if (response.role === "Admin") {
                                window.location.href = "/Admin/Dashboard";
                            } else {
                                window.location.href = "/Home/Index";
                            }
                        }, 1500);
                    } else {
                        showToastifyMessage("Password and email don't match. Please try again.");
                    }
                }
            });
        }
    }
</script>
