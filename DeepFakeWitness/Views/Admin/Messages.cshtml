@{
    Layout = "AdminLayout";
}
@{
    ViewData["Title"] = "Messages";
}

@* <link href="https://cdn.datatables.net/2.3.2/css/dataTables.bootstrap5.css" rel="stylesheet" /> *@
@* <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.3/css/bootstrap.min.css" rel="stylesheet" /> *@

<div class="content-wrapper">
    <div class="container-fluid">
       
        <div class="card p-2">
            <table id="example" class="table table-striped " style="width:100%">
                <thead>
                    <tr>
                        <th>MessageId</th>
                        <th>UserName</th>
                        <th>Email</th>
                        <th>Subject</th>
                        <th>Message</th>
                      

                    </tr>
                </thead>

                <tfoot>
                    <tr>
                        <th>MessageId</th>
                        <th>UserName</th>
                        <th>Email</th>
                        <th>Subject</th>
                        <th>Message</th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>
<!-- JS libraries (must load first) -->
@* <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script> *@
<script src="https://cdn.datatables.net/2.3.2/js/dataTables.js"></script>
<script src="https://cdn.datatables.net/2.3.2/js/dataTables.bootstrap5.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.3/js/bootstrap.bundle.min.js"></script>

<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
<script src="~/js/Toastify.js"></script>
<!-- Initialize DataTable -->

<script>
    $(document).ready(function () {
        loadMessagesTable();
    });

    function loadMessagesTable() {
        debugger;
        $('#example').DataTable().clear().destroy();

        $('#example').DataTable({
            autoWidth: false,
            columnDefs: [
                { targets: '_all', className: 'text-wrap' } // enable wrapping
            ],
            ajax: {
                url: '/AdminContact/GetAllMessages',
                dataSrc: 'data'
            },
            columns: [
                { data: 'MessageId' },
                { data: 'UserName' },
                { data: 'Email' },
                { data: 'Subject' },
                { data: 'Message' },
                {
                    data: 'MessageId',
                    render: function (data, type, row) {
                        return `
                                <button class="btn btn-sm btn-danger" onclick="deleteMessage(${data})">
                                    <i class="fa-solid fa-trash"></i>
                                </button>`;
                    }
                }
            ]
        });
    }

    function deleteMessage(messageId) {
        if (confirm("Are you sure you want to delete this message permanently?")) {
            $.ajax({
                url: '/AdminContact/DeleteMessage',
                type: 'POST',
                data: { messageId: messageId },
                success: function (res) {
                    if (res.success) {
                       showToastifyMessage("Message deleted successfully");
                        loadMessagesTable();
                    } else {
                        alert("Delete failed");
                    }
                },
                error: function () {
                    alert("Error occurred while deleting message");
                }
            });
        }
    }
</script>


