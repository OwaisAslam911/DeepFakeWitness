@{
    Layout = "AdminLayout";
}
@{
    ViewData["Title"] = "Messages";
}



<div class="content-wrapper">
    <div class="container-fluid">
       
        <div class="card p-2">
            <table id="example" class="table table-striped " style="width:100%">
                <thead>
                    <tr>
                        <th>MessageId</th>
                        <th>UserName</th>
                        <th>Email</th>
                        <th>Subject</th>
                        <th>Message</th>
                      

                    </tr>
                </thead>

                <tfoot>
                    <tr>
                        <th>MessageId</th>
                        <th>UserName</th>
                        <th>Email</th>
                        <th>Subject</th>
                        <th>Message</th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>

<script src="~/lib/jquery/jquery.min.js"></script>

<script>
    $(document).ready(function () {
        loadMessagesTable();

        $.ajax({
            url: '@Url.Action("MarkAllMessagesAsRead", "AdminContact")',
            type: 'POST',
            success: function (response) {
                if (response.success) {
                    $("#newMessagesBadge").text("0");
                }
            },
            error: function (xhr, status, error) {
                console.error("Error:", error);
            }
        });

    });


    function loadMessagesTable() {
   
        $('#example').DataTable().clear().destroy();

        $('#example').DataTable({
            autoWidth: false,
            columnDefs: [
                { targets: '_all', className: 'text-wrap' } // enable wrapping
            ],
            ajax: {
                url: '/AdminContact/GetAllMessages',
                dataSrc: 'data'
            },
            columns: [
                { data: 'MessageId' },
                { data: 'UserName' },
                { data: 'Email' },
                { data: 'Subject' },
                { data: 'Message' },
                {
                    data: 'MessageId',
                    render: function (data, type, row) {
                        return `
                                <button class="btn btn-sm btn-danger" onclick="deleteMessage(${data})">
                                    <i class="fa-solid fa-trash"></i>
                                </button>`;
                    }
                }
            ]
        });
    }

    function deleteMessage(messageId) {
        if (confirm("Are you sure you want to delete this message permanently?")) {
            $.ajax({
                url: '/AdminContact/DeleteMessage',
                type: 'POST',
                data: { messageId: messageId },
                success: function (res) {
                    if (res.success) {
                       showToastifyMessage("Message deleted successfully");
                        loadMessagesTable();
                    } else {
                        alert("Delete failed");
                    }
                },
                error: function () {
                    alert("Error occurred while deleting message");
                }
            });
        }
    }
</script>


