     <script>

        function loadNewMessagesCount() {
            $.get("@Url.Action("GetNewMessagesCount", "AdminContact", new { area = "Admin" })", function (data) {
                if ($("#newMessagesBadge").length) {
                    $("#newMessagesBadge").text(data.newMessages);
                }
            });
        }

        $(document).ready(function () {
            debugger;
            loadNewMessagesCount();

            // Optional: refresh every 30s
            // setInterval(loadNewMessagesCount, 30000);

            $('#logoutBtn').click(function (e) {
                e.preventDefault();

                $.ajax({
                    url: '/Login/LogoutUser', // update this if your controller is named differently
                    type: 'POST',
                    success: function (response) {
                        if (response.status === 'success') {
                            window.location.href = '/Login/Login'; // redirect after logout
                        } else {
                            alert(response.message);
                        }
                    },
                    error: function () {
                        alert('Logout failed due to server error.');
                    }
                });
            });
        });
    </script>
