@inject IHttpContextAccessor HttpContextAccessor

@{
    var role = HttpContextAccessor.HttpContext.Session.GetString("UserRole");
    var sessionSet = HttpContextAccessor.HttpContext.Session.GetString("UserId");
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DeepFakeWitness</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DeepFakeWitness.styles.css" asp-append-version="true" />
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">
   
    <style>
        body {
            background-color: #f8f9fa;
        }

        #topbar {
            overflow: hidden;
            transition: opacity 0.5s ease, max-height 0.5s ease;
            max-height: 40px;
        }

        .topbar-visible {
            opacity: 1;
            max-height: 40px;
            pointer-events: auto;
        }

        .topbar-hidden {
            opacity: 0;
            max-height: 0;
            pointer-events: none;
        }

        .main-content {
            padding-top: 60px;
            padding-bottom: 60px;
        }

        .card img {
            max-height: 300px;
            object-fit: contain;
        }
    </style>
</head>
<body>
    <div id="topbar" class="topbar-visible bg-dark text-white py-1 px-4 small">
        <div class="d-flex justify-content-between fs-6">
            <div>📞 +92 300 1234567</div>
            <div>✉️ info@truthlens.com</div>
        </div>
    </div>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg bg-dark px-5" style="position: sticky; top: 0; z-index: 1030;"
         data-bs-theme="dark">
        <div class="container-fluid">
            <a class="navbar-brand fs-2 text-white" href="#">🔔 TruthLens</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                    aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
                <ul class="navbar-nav mb-2 mb-lg-0 fs-5">
                    <li class="nav-item"><a class="nav-link active" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">About</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Contact">Contact</a></li>
                    @if(role == "Admin")
                    { 
                    <li class="nav-item"><a class="nav-link" asp-controller="Admin" asp-action="Dashboard">Admin</a></li>
                    }
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <img src="~/uploads/0cab2fa9-daff-40eb-a57d-343d7d0eec95.jpg" style="width:20px; height:20px;" alt="Alternate Text" />
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="#">Profile</a></li>
                            <li><a class="dropdown-item" href="#">Previous Results</a></li>
                            <li><hr class="dropdown-divider"></li>
                            @if(sessionSet == null || sessionSet == "")
                            {
                            <li><a class="dropdown-item" asp-controller="Login" asp-action="Login">Login</a></li>

                            }else{
                                <li><a class="dropdown-item" id="logoutBtn">Logout</a></li>

                            }
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

            @RenderBody()
    
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - DeepFakeWitness - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/Toastify.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)










    <script>
        const topbar = document.getElementById("topbar");
        let isTopbarVisible = true;

        window.addEventListener("scroll", () => {
            const atTop = window.scrollY <= 10;

            if (atTop && !isTopbarVisible) {
                topbar.classList.remove("topbar-hidden");
                topbar.classList.add("topbar-visible");
                isTopbarVisible = true;
            } else if (!atTop && isTopbarVisible) {
                requestAnimationFrame(() => {
                    topbar.classList.remove("topbar-visible");
                    topbar.classList.add("topbar-hidden");
                });
                isTopbarVisible = false;
            }
        });




        $(document).ready(function () {
            $('#logoutBtn').click(function (e) {
                e.preventDefault();

                $.ajax({
                    url: '/Login/LogoutUser', // update this if your controller is named differently
                    type: 'POST',
                    success: function (response) {
                        if (response.status === 'success') {
                            window.location.href = '/Login/Login'; // redirect after logout
                        } else {
                            alert(response.message);
                        }
                    },
                    error: function () {
                        alert('Logout failed due to server error.');
                    }
                });
            });
        });
    </script>
</body>

</html>

