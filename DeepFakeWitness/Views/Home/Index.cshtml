@{
    Layout = "_Layout";
}

<header class="bg-dark text-white text-center py-5">
    <div class="container">
        <h1 class="display-4 fw-bold">Home TruthLens</h1>
        <p class="lead">See the world more clearly — because truth matters.</p>
    </div>
</header>
<div class="content-wrapper">
<div class="container-fluid main-content">
    <div class="row justify-content-center g-4">
        <!-- Upload Card -->
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white fw-bold">
                    Upload Image for Deepfake Detection
                </div>
                <div class="card-body">
                     <form id="uploadForm" enctype="multipart/form-data">
    <div class="mb-3 text-center">
        <img id="imagePreview" src="#" alt="Preview" class="img-fluid rounded border shadow-sm"
             style="display: none;" />
    </div>
    <div class="mb-3">
        <label for="image" class="form-label">Select Image</label>
        <input type="file" name="image" id="image" class="form-control" accept="image/*" required>
    </div>
    <button type="submit" class="btn btn-primary w-100">Check</button>
</form>

                </div>
            </div>
        </div>

        <!-- Result Card -->
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white fw-bold">
                    Detection Result
                </div>
                    <div class="card-body text-center">
                        <div id="loader" style="display:none;">
                            <div class="spinner-border text-success" role="status">
                                <span class="visually-hidden">Processing...</span>
                            </div>
                            <p class="mt-2">Processing image...</p>
                        </div>

                        <h5 id="resultText">
                            @if (ViewBag.Result != null)
                            {
                                @ViewBag.Result
                            }
                            else
                            {
                                <text>No result yet.</text>
                            }
                        </h5>
                    </div>

            </div>
        </div>
    </div>
</div>
</div>

<script src="~/assets/js/jquery.min.js"></script>
<script>
      $("#image").change(function () {
        var file = this.files[0];
        if (file) {
            var reader = new FileReader();
            reader.onload = function (e) {
                $("#imagePreview")
                    .attr("src", e.target.result)
                    .show();
            };
            reader.readAsDataURL(file);
        }
    });
    $("#uploadForm").submit(function (e) {
        e.preventDefault();

        var imageExist = $("#image").val();
        if (imageExist === "") {
            alert("Please select an image.");
            return;
        }

        var formData = new FormData();
        formData.append("image", $("#image")[0].files[0]);
        $("#loader").show();
        $("#resultText").text("");
        $.ajax({
            url: '/Home/CheckImage',
            type: 'POST',
            data: formData,
            processData: false,
            contentType: false,
            success: function (response) {
                $("#loader").hide();
                if (!response.success && response.message === "Please login first.") {
                    alert("⚠️ " + response.message);
                    return;
                }

                if (response.success) {
                    $("#loader").hide();
                    $("#resultText").text(response.message);
                    $("#imagePreview").attr("src", response.imagePath).show();
                } else {
                    $("#loader").hide();
                    $("#resultText").text(response.message);
                }
            },
            error: function () {
                $("#loader").hide();
                $("#resultText").text("An error occurred while checking the image.");
            }
        });
    });

   

 </script>