
@{
    ViewData["Title"] = "About";
}

<!-- Header Section -->
<header class="bg-dark text-white text-center py-5">
    <div class="container">
        <h1 class="display-4 fw-bold">About TruthLens</h1>
        <p class="lead">See the world more clearly — because truth matters.</p>
    </div>
</header>

<!-- About Section -->
<section class="py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <img src="~/assets/images/flipping-the-deepfake-narrative.jpg" alt="Deepfake detection" class="img-fluid rounded shadow" />
                
            </div>
            <div class="col-md-6">
                <h2 class="fw-bold">What is TruthLens?</h2>
                <p>
                    TruthLens is an AI-powered web application designed to detect and analyze deepfake media.
                    In today’s digital world, manipulated images and videos can spread misinformation,
                    damage reputations, and erode trust. TruthLens provides a reliable way to verify content
                    authenticity, helping users separate truth from deception.
                </p>
            </div>
        </div>
    </div>
</section>

<!-- Mission Section -->
<section class="bg-light py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6 order-md-2">
                <img src="~/assets/images/080924_bol_deepfake750x500.jpg" alt="Mission image" class="img-fluid rounded shadow" />
           
            </div>
            <div class="col-md-6 order-md-1">
                <h2 class="fw-bold">Our Mission</h2>
                <p>
                    We aim to build trust in digital communication by empowering people to detect misinformation
                    and safeguard against malicious use of deepfake technology.
                </p>
            </div>
        </div>
    </div>
</section>

<!-- Who Can Use Section -->
<section class="py-5">
    <div class="container text-center">
        <h2 class="fw-bold mb-4">Who Can Use TruthLens?</h2>
        <div class="row g-4">
            <div class="col-md-4">
                <img src="~/assets/images/jurnalist.jpg" alt="Journalists" class="img-fluid rounded mb-3" style="width:300px; height:200px;" />
     
                <h5 class="fw-bold">Journalists & Media</h5>
                <p>Verify news content before publishing to ensure authenticity.</p>
            </div>
            <div class="col-md-4">
                <img src="~/assets/images/research.jpeg" alt="Educators" class="img-fluid rounded mb-3" style="width:300px; height:200px;" />
              
                <h5 class="fw-bold">Educators & Researchers</h5>
                <p>Raise awareness about deepfakes and study misinformation trends.</p>
            </div>
            <div class="col-md-4">
                <img src="~/assets/images/general.jpg" alt="Users" class="img-fluid rounded mb-3" style="width:300px; height:200px;" />
              
                <h5 class="fw-bold">Everyday Users</h5>
                <p>Check the authenticity of online media you consume daily.</p>
            </div>
        </div>
    </div>
</section>

<!-- Commitment Section -->
<section class="bg-light py-5">
    <div class="container text-center">
        <h2 class="fw-bold mb-4">Our Commitment</h2>
        <p class="mb-4">
            TruthLens is built with <strong>privacy and transparency</strong> in mind.
            Your uploaded files are processed securely and never shared without consent.
        </p>
        <img src="~/assets/images/secured.jpg" alt="Privacy Commitment" class="img-fluid rounded shadow" width="400px" height="300px"/>
        @* <img src="https://picsum.photos/600/300?random=6" alt="Privacy Commitment" class="img-fluid rounded shadow"> *@
    </div>
</section>

